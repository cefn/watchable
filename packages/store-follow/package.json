{
  "name": "@lauf/store-follow",
  "version": "1.3.0-alpha.1",
  "description": "Await @lauf/store state changes and trigger business logic",
  "homepage": "https://github.com/cefn/watchable/tree/main/modules/store#readme",
  "bugs": {
    "url": "https://github.com/cefn/watchable/issues",
    "email": "watchable@cefn.com"
  },
  "repository": "github:cefn/watchable",
  "license": "MIT",
  "author": "Cefn Hoile <github.com@cefn.com> (https://cefn.com)",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "README.md",
    "dist"
  ],
  "scripts": {
    "build": "wireit",
    "test": "wireit",
    "lint": "wireit"
  },
  "devDependencies": {
    "typescript": "^5.0.4",
    "wireit": "^0.9.5"
  },
  "peerDependencies": {
    "@lauf/queue": "1.3.0-alpha.1",
    "@lauf/store": "1.3.0-alpha.1"
  },
  "publishConfig": {
    "access": "public",
    "main": "dist/index.js",
    "types": "dist/index.d.ts"
  },
  "wireit": {
    "test": {
      "command": "jest",
      "files": [
        "src/**/*",
        "test/**/*",
        "tsconfig.json",
        "jest.config.cjs",
        "../../jest.config.base.cjs"
      ],
      "output": [
        "./coverage"
      ],
      "dependencies": [
        "build"
      ]
    },
    "build": {
      "dependencies": [
        "../../packages/queue:build",
        "../../packages/store:build"
      ],
      "command": "node ./esbuild.cjs && tsc --build",
      "files": [
        "src/**/*",
        "tsconfig.json",
        "tsconfig.build.json",
        "../../tsconfig.base.json",
        "esbuild.cjs",
        "../../esbuild.base.cjs"
      ],
      "output": [
        "./dist"
      ]
    },
    "lint": {
      "command": "eslint -c .eslintrc.cjs .",
      "files": [
        "**/*.js",
        "**/*.jsx",
        "**/*.ts",
        "**/*.jsx"
      ],
      "output": [],
      "dependencies": [
        "build"
      ]
    }
  }
}
