{
  "name": "@lauf/store-react",
  "version": "1.3.0",
  "description": "Update React components when @lauf/store state changes",
  "homepage": "https://github.com/cefn/watchable/tree/main/modules/store#readme",
  "bugs": {
    "url": "https://github.com/cefn/watchable/issues",
    "email": "watchable@cefn.com"
  },
  "repository": "github:cefn/watchable",
  "license": "MIT",
  "author": "Cefn Hoile <github.com@cefn.com> (https://cefn.com)",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "README.md",
    "dist"
  ],
  "scripts": {
    "build": "wireit",
    "lint": "wireit",
    "test": "wireit"
  },
  "devDependencies": {
    "@rollup/plugin-node-resolve": "^15.0.2",
    "@testing-library/dom": "^9.2.0",
    "@testing-library/react": "^14.0.0",
    "@testing-library/user-event": "^14.4.3",
    "@types/react": "^18.0.25",
    "typescript": "^5.0.4",
    "wireit": "^0.9.5"
  },
  "peerDependencies": {
    "@lauf/store": "1.3.0",
    "react": "^18.2.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "wireit": {
    "test": {
      "command": "jest",
      "files": [
        "src/**/*",
        "test/**/*",
        "tsconfig.json",
        "jest.config.cjs",
        "../../jest.config.base.cjs"
      ],
      "output": [
        "./coverage"
      ],
      "dependencies": [
        "build"
      ]
    },
    "build": {
      "dependencies": [
        "../../packages/store:build"
      ],
      "command": "tsc && vite build",
      "files": [
        "src/**/*",
        "tsconfig.json",
        "tsconfig.build.json",
        "../../tsconfig.base.json",
        "vite.config.ts"
      ],
      "output": [
        "./dist"
      ]
    },
    "lint": {
      "command": "eslint -c .eslintrc.cjs .",
      "files": [
        "**/*.js",
        "**/*.jsx",
        "**/*.ts",
        "**/*.jsx"
      ],
      "output": [],
      "dependencies": [
        "build"
      ]
    }
  },
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.umd.cjs"
    }
  }
}
