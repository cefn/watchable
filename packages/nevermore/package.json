{
  "name": "@watchable/nevermore",
  "version": "0.9.0-alpha.9",
  "description": "Rate limits and concurrency using generators of promiseFactories",
  "homepage": "https://github.com/cefn/watchable/tree/main/packages/nevermore#readme",
  "bugs": {
    "url": "https://github.com/cefn/watchable/issues",
    "email": "watchable@cefn.com"
  },
  "repository": "github:cefn/watchable",
  "license": "MIT",
  "author": "Cefn Hoile <github.com@cefn.com> (https://cefn.com)",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "README.md",
    "dist",
    "src"
  ],
  "scripts": {
    "build": "wireit",
    "lint": "wireit",
    "test": "wireit",
    "test:watch": "wireit"
  },
  "devDependencies": {
    "@vitest/coverage-v8": "^0.34.6",
    "expose-gc": "^1.0.0",
    "typescript": "^5.0.4",
    "vite": "^4.2.1",
    "vitest": "^0.34.6",
    "wireit": "^0.9.5"
  },
  "publishConfig": {
    "access": "public"
  },
  "wireit": {
    "test:watch": {
      "command": "vitest --reporter verbose",
      "dependencies": [
        "build"
      ],
      "files": [
        "src/**/*",
        "test/**/*",
        "tsconfig.json",
        "tsconfig.test.json",
        "vite.config.ts"
      ]
    },
    "test": {
      "dependencies": [
        "build"
      ],
      "command": "vitest run --reporter verbose --no-threads --isolate",
      "files": [
        "src/**/*",
        "test/**/*",
        "tsconfig.json",
        "tsconfig.test.json",
        "vite.config.ts"
      ],
      "output": [
        "./coverage"
      ]
    },
    "build": {
      "dependencies": [
        "../../packages/queue:build"
      ],
      "command": "tsc --build && vite build",
      "files": [
        "src/**/*",
        "tsconfig.json",
        "vite.config.ts",
        "README.md"
      ],
      "output": [
        "./dist"
      ]
    },
    "lint": {
      "command": "eslint -c .eslintrc.cjs .",
      "files": [
        "**/*.js",
        "**/*.jsx",
        "**/*.ts",
        "**/*.jsx",
        "!dist/**/*",
        "!coverage/**/*"
      ],
      "output": [],
      "dependencies": [
        "build"
      ]
    }
  },
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs",
      "default": "./dist/index.cjs"
    }
  },
  "sideEffects": false,
  "dependencies": {
    "@watchable/queue": "^1.0.0-alpha.5",
    "race-as-promised": "^0.0.3"
  }
}
