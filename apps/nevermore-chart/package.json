{
  "name": "nevermore-chart",
  "description": "Visualise the execution of mock tasks with various Nevermore options",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "wireit",
    "lint": "wireit",
    "preview": "vite preview"
  },
  "dependencies": {
    "@watchable/nevermore": "^0.9.0-alpha.9",
    "@watchable/store": "^1.0.0-alpha.7",
    "@watchable/store-edit": "^1.0.0-alpha.7",
    "@watchable/store-follow": "^1.0.0-alpha.7",
    "@watchable/store-react": "^1.0.0-alpha.8",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "@typescript-eslint/parser": "^6.14.0",
    "@vitejs/plugin-react": "^4.2.1",
    "eslint": "^8.55.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "vite": "^5.0.8",
    "wireit": "^0.9.5"
  },
  "license": "MIT",
  "author": "Cefn Hoile <github.com@cefn.com> (https://cefn.com)",
  "repository": {
    "url": "https://github.com/cefn/watchable.git",
    "directory": "apps/nevermore-chart"
  },
  "homepage": "https://github.com/cefn/watchable/tree/main/apps/nevermore-chart#readme",
  "bugs": {
    "url": "https://github.com/cefn/watchable/issues?q=is%3Aissue+is%3Aopen+label%3Anevermore-chart",
    "email": "watchable@cefn.com"
  },
  "wireit": {
    "lint": {
      "command": "eslint -c .eslintrc.cjs .",
      "files": [
        "**/*.js",
        "**/*.jsx",
        "**/*.ts",
        "**/*.jsx",
        "!dist/**/*",
        "!coverage/**/*"
      ],
      "output": [],
      "dependencies": [
        "build"
      ]
    },
    "build": {
      "dependencies": [
        "../../packages/nevermore:build",
        "../../packages/store:build",
        "../../packages/store-edit:build",
        "../../packages/store-follow:build",
        "../../packages/store-react:build"
      ],
      "command": "vite build",
      "files": [
        "vite.config.ts",
        "src/**/*"
      ],
      "output": [
        "./dist"
      ]
    }
  }
}