  "type": "module",
  "scripts": {
    "build": "wireit",
    "dev": "vite",
    "lint": "wireit",
    "preview": "vite preview"
  },
  "dependencies": {
    "@lauf/store": "2.0.0-beta.3",
    "@lauf/store-follow": "2.0.0-beta.3"
  },
  "devDependencies": {
    "@vitejs/plugin-legacy": "^4.0.2",
    "typescript": "^5.0.4",
    "vite": "^4.2.1",
    "wireit": "^0.9.5"
  },
  "wireit": {
    "build": {
      "dependencies": [
        "../../packages/store:build",
        "../../packages/store-follow:build"
      ],
      "command": "tsc && vite build",
      "files": [
        "src/**/*",
        "vite.config.ts",
        "tsconfig.build.json",
        "../../tsconfig.base.json"
      ],
      "output": [
        "./dist"
      ]
    },
    "lint": {
      "command": "eslint -c .eslintrc.cjs .",
      "files": [
        "**/*.js",
        "**/*.jsx",
        "**/*.ts",
        "**/*.jsx",
        "!dist/**/*",
        "!coverage/**/*"
      ],
      "output": [],
      "dependencies": [
        "build"
      ]
    }
  }
}
